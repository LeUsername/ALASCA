#!/bin/bash

java -ea -cp 'jars/*' -Djava.security.manager \
     -Djava.security.policy=dcvm.policy \
     distributedcvm.DistributedCVM controleur config.xml &

java -ea -cp 'jars/*' -Djava.security.manager \
     -Djava.security.policy=dcvm.policy \
     distributedcvm.DistributedCVM compteur config.xml &

java -ea -cp 'jars/*' -Djava.security.manager \
     -Djava.security.policy=dcvm.policy \
     distributedcvm.DistributedCVM refri config.xml &

java -ea -cp 'jars/*' -Djava.security.manager \
     -Djava.security.policy=dcvm.policy \
     distributedcvm.DistributedCVM seche config.xml &
     
java -ea -cp 'jars/*' -Djava.security.manager \
     -Djava.security.policy=dcvm.policy \
     distributedcvm.DistributedCVM eolienne config.xml &


